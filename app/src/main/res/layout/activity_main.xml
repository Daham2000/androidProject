<!--                android:id="@+id/b2"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:onClick="jobCancel"-->
<!--                android:text="Clear Job" />-->

        </LinearLayout>

    </ScrollView>




</androidx.appcompat.widget.LinearLayoutCompat>